<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue Kanban pour les demandes d'information -->
        <record id="view_information_request_kanban" model="ir.ui.view">
            <field name="name">request.information.kanban</field>
            <field name="model">request.information</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_small_column">
                    <field name="stage_id"/>
                    <field name="partner_name"/>
                    <field name="request_date"/>
                    <field name="deadline_date"/>
                    <field name="is_overdue"/>
                    <field name="days_to_deadline"/>
                    <field name="state"/>
                    <field name="user_id"/>
                    <field name="department_id"/>
                    <templates>
                        <t t-name="card">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_overdue.raw_value ? 'oe_kanban_card_danger' : ''}">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <br/>
                                            <span class="o_kanban_record_subtitle">
                                                <field name="partner_name"/>
                                            </span>
                                        </div>
                                        <div class="o_kanban_manage_button_section">
                                            <a class="o_kanban_manage_toggle_button" href="#">
                                                <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_tags">
                                            <span t-if="record.is_overdue.raw_value" class="badge badge-danger">
                                                En Retard
                                            </span>
                                            <span t-elif="record.days_to_deadline.raw_value &lt; 5" class="badge badge-warning">
                                                Urgent
                                            </span>
                                        </div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span>Échéance: <field name="deadline_date"/></span>
                                                <br/>
                                                <span t-if="record.department_id.raw_value">
                                                    Dept: <field name="department_id"/>
                                                </span>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <img t-if="record.user_id.raw_value"
                                                     t-att-src="'/web/image/res.users/%s/avatar_128' % record.user_id.raw_value"
                                                     t-att-title="record.user_id.value"
                                                     t-att-alt="record.user_id.value"
                                                     class="oe_kanban_avatar"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Liste pour les demandes d'information -->
        <record id="view_information_request_list" model="ir.ui.view">
            <field name="name">request.information.list</field>
            <field name="model">request.information</field>
            <field name="arch" type="xml">
                <list decoration-danger="is_overdue" decoration-warning="days_to_deadline &lt; 5">
                    <field name="name"/>
                    <field name="partner_name"/>
                    <field name="partner_email"/>
                    <field name="request_date"/>
                    <field name="deadline_date"/>
                    <field name="days_to_deadline"/>
                    <field name="stage_id"/>
                    <field name="user_id"/>
                    <field name="department_id"/>
                    <field name="state" invisible="1"/>
                    <field name="is_overdue" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Vue Formulaire pour les demandes d'information -->
        <record id="view_information_request_form" model="ir.ui.view">
            <field name="name">request.information.form</field>
            <field name="model">request.information</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                        <button name="action_submit" string="Soumettre" type="object" 
                                class="btn-primary" modifiers='{"invisible": [["state", "!=", "draft"]]}'/>
                        <button name="action_start_processing" string="Commencer le Traitement" type="object" 
                                class="btn-primary" modifiers='{"invisible": [["state", "!=", "submitted"]]}'/>
                        <button name="action_request_validation" string="Demander Validation" type="object" 
                                class="btn-primary" modifiers='{"invisible": [["state", "!=", "in_progress"]]}'/>
                        <button name="action_approve" string="Approuver" type="object" 
                                class="btn-success" modifiers='{"invisible": [["state", "!=", "pending_validation"]]}'
                                groups="sama_conai.group_info_request_manager"/>
                        <button name="action_reject_validation" string="Rejeter" type="object" 
                                class="btn-warning" modifiers='{"invisible": [["state", "!=", "pending_validation"]]}'
                                groups="sama_conai.group_info_request_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,in_progress,pending_validation,responded,refused"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_portal" icon="fa-external-link">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Voir au</span>
                                    <span class="o_stat_text">Portail</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="demandeur" string="Informations du Demandeur">
                                <field name="partner_name"/>
                                <field name="partner_email"/>
                                <field name="partner_phone"/>
                                <field name="requester_quality"/>
                            </group>
                            <group name="traitement" string="Traitement">
                                <field name="request_date"/>
                                <field name="deadline_date"/>
                                <field name="days_to_deadline" modifiers='{"invisible": [["state", "in", ["responded", "refused", "cancelled"]]]}'/>
                                <field name="user_id"/>
                                <field name="department_id"/>
                                <field name="response_date" modifiers='{"invisible": [["response_date", "=", false]]}'/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Description de la Demande" name="description">
                                <field name="description" widget="html"/>
                            </page>
                            
                            <page string="Réponse" name="response">
                                <group>
                                    <field name="is_refusal"/>
                                </group>
                                
                                <div modifiers='{"invisible": [["is_refusal", "=", true]]}'>
                                    <group string="Réponse Positive">
                                        <field name="response_body" widget="html" nolabel="1"/>
                                    </group>
                                    <group string="Pièces Jointes">
                                        <field name="response_attachment_ids" widget="many2many_binary" nolabel="1"/>
                                    </group>
                                </div>
                                
                                <div modifiers='{"invisible": [["is_refusal", "=", false]]}'>
                                    <group string="Motif de Refus">
                                        <field name="refusal_reason_id" modifiers='{"required": [["is_refusal", "=", true]]}'/>
                                        <field name="refusal_motivation" modifiers='{"required": [["is_refusal", "=", true]]}'/>
                                    </group>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Recherche pour les demandes d'information -->
        <record id="view_information_request_search" model="ir.ui.view">
            <field name="name">request.information.search</field>
            <field name="model">request.information</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="partner_name"/>
                    <field name="partner_email"/>
                    <field name="description"/>
                    <field name="user_id"/>
                    <field name="department_id"/>
                    
                    <filter string="Mes Demandes" name="my_requests" domain="[ ('user_id', '=', uid)]"/>
                    <filter string="En Retard" name="overdue" domain="[('is_overdue', '=', True)]"/>
                    <filter string="Urgent" name="urgent" domain="[('days_to_deadline', '&lt;', 5), ('state', 'not in', ['responded', 'refused', 'cancelled'])]"/>
                    
                    <separator/>
                    <filter string="Nouvelles" name="new" domain="[('state', '=', 'submitted')]"/>
                    <filter string="En Traitement" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="En Attente de Validation" name="pending_validation" domain="[('state', '=', 'pending_validation')]"/>
                    <filter string="Répondues" name="responded" domain="[('state', '=', 'responded')]"/>
                    <filter string="Refusées" name="refused" domain="[('state', '=', 'refused')]"/>
                    
                    <separator/>
                    <filter string="Récentes" name="recent" domain="[('request_date', '&gt;=', '2025-08-01')]"/>
                    <filter string="Cette Année" name="this_year" domain="[('request_date', '&gt;=', '2025-01-01')]"/>
                    
                    <group expand="0" string="Grouper par">
                        <filter string="Étape" name="group_stage" context="{'group_by': 'stage_id'}"/>
                        <filter string="Responsable" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Département" name="group_department" context="{'group_by': 'department_id'}"/>
                        <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Date de Demande" name="group_request_date" context="{'group_by': 'request_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vue Graphique pour les demandes d'information -->
        <record id="view_information_request_graph" model="ir.ui.view">
            <field name="name">request.information.graph</field>
            <field name="model">request.information</field>
            <field name="arch" type="xml">
                <graph string="Analyse des Demandes d'Information">
                    <field name="request_date" type="row" interval="month"/>
                    <field name="state" type="col"/>
                </graph>
            </field>
        </record>

        <!-- Vue Pivot pour les demandes d'information -->
        <record id="view_information_request_pivot" model="ir.ui.view">
            <field name="name">request.information.pivot</field>
            <field name="model">request.information</field>
            <field name="arch" type="xml">
                <pivot string="Analyse des Demandes d'Information">
                    <field name="request_date" type="row" interval="month"/>
                    <field name="state" type="col"/>
                    <field name="days_to_deadline" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Action pour les demandes d'information -->
        <record id="action_information_request" model="ir.actions.act_window">
            <field name="name">Demandes d'Information</field>
            <field name="res_model">request.information</field>
            <field name="view_mode">kanban,list,form,graph,pivot</field>
            <field name="context">{'search_default_my_requests': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle demande d'accès à l'information
                </p>
                <p>
                    Gérez les demandes d'accès à l'information publique selon la législation sénégalaise.
                    Suivez le workflow de traitement et respectez les délais légaux de 30 jours.
                </p>
            </field>
        </record>

        <!-- Action spécifique pour l'analyse des demandes d'information -->
        <record id="action_information_request_analysis" model="ir.actions.act_window">
            <field name="name">Analyse des Demandes d'Information</field>
            <field name="res_model">request.information</field>
            <field name="view_mode">graph,pivot,list</field>
            <field name="context">{
                'search_default_this_year': 1,
                'search_default_group_state': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucune donnée d'analyse disponible
                </p>
                <p>
                    Analysez les tendances et performances de traitement des demandes d'information.
                    Utilisez les graphiques et tableaux croisés pour identifier les axes d'amélioration.
                </p>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cron pour génération automatique des rapports -->
        <record id="cron_auto_generate_reports" model="ir.cron">
            <field name="name">Génération Automatique des Rapports SAMA CONAI</field>
            <field name="model_id" ref="model_auto_report_generator"/>
            <field name="state">code</field>
            <field name="code">model.cron_generate_reports()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>

            <field name="active">True</field>
            <field name="user_id" ref="base.user_admin"/>
        </record>

        <!-- Cron pour actualisation du dashboard exécutif -->
        <record id="cron_refresh_executive_dashboard" model="ir.cron">
            <field name="name">Actualisation Dashboard Exécutif SAMA CONAI</field>
            <field name="model_id" ref="model_executive_dashboard"/>
            <field name="state">code</field>
            <field name="code">
# Actualiser tous les dashboards actifs
dashboards = model.search([])
for dashboard in dashboards:
    dashboard.action_refresh_data()
            </field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>

            <field name="active">True</field>
            <field name="user_id" ref="base.user_admin"/>
        </record>

    </data>
</odoo>
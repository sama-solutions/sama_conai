<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Séquence pour les demandes d'information -->
        <record id="seq_request_information" model="ir.sequence">
            <field name="name">Demandes d'Information</field>
            <field name="code">request.information</field>
            <field name="prefix">DI/%(year)s/</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="use_date_range">False</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Séquence pour les signalements d'alerte -->
        <record id="seq_whistleblowing_alert" model="ir.sequence">
            <field name="name">Signalements d'Alerte</field>
            <field name="code">whistleblowing.alert</field>
            <field name="prefix">SA/%(year)s/</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="use_date_range">False</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>
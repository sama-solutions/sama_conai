<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Étapes du workflow des demandes d'information -->
        
        <record id="stage_new" model="request.information.stage">
            <field name="name">Nouvelle</field>
            <field name="description">Demande nouvellement créée, en attente de traitement</field>
            <field name="sequence">10</field>
            <field name="color">1</field>
            <field name="is_closed" eval="False"/>
            <field name="fold" eval="False"/>
        </record>

        <record id="stage_in_progress" model="request.information.stage">
            <field name="name">En Traitement</field>
            <field name="description">Demande assignée à un expert pour traitement</field>
            <field name="sequence">20</field>
            <field name="color">3</field>
            <field name="is_closed" eval="False"/>
            <field name="fold" eval="False"/>
        </record>

        <record id="stage_pending_validation" model="request.information.stage">
            <field name="name">En Attente de Validation</field>
            <field name="description">Réponse préparée, en attente de validation par un manager</field>
            <field name="sequence">30</field>
            <field name="color">5</field>
            <field name="is_closed" eval="False"/>
            <field name="fold" eval="False"/>
        </record>

        <record id="stage_responded" model="request.information.stage">
            <field name="name">Répondu</field>
            <field name="description">Réponse envoyée au demandeur</field>
            <field name="sequence">40</field>
            <field name="color">10</field>
            <field name="is_closed" eval="True"/>
            <field name="fold" eval="True"/>
        </record>

        <record id="stage_refused" model="request.information.stage">
            <field name="name">Refusé</field>
            <field name="description">Demande refusée avec motivation légale</field>
            <field name="sequence">50</field>
            <field name="color">9</field>
            <field name="is_closed" eval="True"/>
            <field name="fold" eval="True"/>
        </record>

        <record id="stage_redirected" model="request.information.stage">
            <field name="name">Réorientée</field>
            <field name="description">Demande réorientée vers l'organisme compétent</field>
            <field name="sequence">60</field>
            <field name="color">7</field>
            <field name="is_closed" eval="True"/>
            <field name="fold" eval="True"/>
        </record>

        <record id="stage_cancelled" model="request.information.stage">
            <field name="name">Annulée</field>
            <field name="description">Demande annulée par le demandeur ou pour cause technique</field>
            <field name="sequence">70</field>
            <field name="color">8</field>
            <field name="is_closed" eval="True"/>
            <field name="fold" eval="True"/>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Étapes du workflow des signalements d'alerte -->
        
        <record id="whistleblowing_stage_new" model="whistleblowing.alert.stage">
            <field name="name">Nouveau Signalement</field>
            <field name="description">Signalement nouvellement reçu, en attente d'évaluation</field>
            <field name="sequence">10</field>
            <field name="color">1</field>
            <field name="is_closed" eval="False"/>
            <field name="fold" eval="False"/>
        </record>

        <record id="whistleblowing_stage_assessment" model="whistleblowing.alert.stage">
            <field name="name">Évaluation Préliminaire</field>
            <field name="description">Évaluation de la recevabilité et de la gravité du signalement</field>
            <field name="sequence">20</field>
            <field name="color">3</field>
            <field name="is_closed" eval="False"/>
            <field name="fold" eval="False"/>
        </record>

        <record id="whistleblowing_stage_investigation" model="whistleblowing.alert.stage">
            <field name="name">Enquête Interne</field>
            <field name="description">Investigation approfondie du signalement</field>
            <field name="sequence">30</field>
            <field name="color">5</field>
            <field name="is_closed" eval="False"/>
            <field name="fold" eval="False"/>
        </record>

        <record id="whistleblowing_stage_resolved" model="whistleblowing.alert.stage">
            <field name="name">Résolu</field>
            <field name="description">Signalement traité et résolu en interne</field>
            <field name="sequence">40</field>
            <field name="color">10</field>
            <field name="is_closed" eval="True"/>
            <field name="fold" eval="True"/>
        </record>

        <record id="whistleblowing_stage_transmitted" model="whistleblowing.alert.stage">
            <field name="name">Transmis</field>
            <field name="description">Signalement transmis aux autorités compétentes</field>
            <field name="sequence">50</field>
            <field name="color">7</field>
            <field name="is_closed" eval="True"/>
            <field name="fold" eval="True"/>
        </record>

        <record id="whistleblowing_stage_closed" model="whistleblowing.alert.stage">
            <field name="name">Clôturé</field>
            <field name="description">Signalement clôturé sans suite ou non fondé</field>
            <field name="sequence">60</field>
            <field name="color">8</field>
            <field name="is_closed" eval="True"/>
            <field name="fold" eval="True"/>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue Kanban pour les signalements d'alerte -->
        <record id="view_whistleblowing_alert_kanban" model="ir.ui.view">
            <field name="name">whistleblowing.alert.kanban</field>
            <field name="model">whistleblowing.alert</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_small_column">
                    <field name="stage_id"/>
                    <field name="alert_date"/>
                    <field name="category"/>
                    <field name="priority"/>
                    <field name="state"/>
                    <field name="manager_id"/>
                    <field name="is_anonymous"/>
                    <templates>
                        <t t-name="card">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.priority.raw_value == 'urgent' ? 'oe_kanban_card_danger' : record.priority.raw_value == 'high' ? 'oe_kanban_card_warning' : ''}">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <br/>
                                            <span class="o_kanban_record_subtitle">
                                                <field name="category"/>
                                            </span>
                                        </div>
                                        <div class="o_kanban_manage_button_section">
                                            <a class="o_kanban_manage_toggle_button" href="#">
                                                <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_tags">
                                            <span t-if="record.is_anonymous.raw_value" class="badge badge-info">
                                                <i class="fa fa-user-secret"/> Anonyme
                                            </span>
                                            <span t-if="record.priority.raw_value == 'urgent'" class="badge badge-danger">
                                                Urgent
                                            </span>
                                            <span t-elif="record.priority.raw_value == 'high'" class="badge badge-warning">
                                                Priorité Élevée
                                            </span>
                                        </div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span>Date: <field name="alert_date" widget="date"/></span>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <img t-if="record.manager_id.raw_value"
                                                     t-att-src="'/web/image/res.users/%s/avatar_128' % record.manager_id.raw_value"
                                                     t-att-title="record.manager_id.value"
                                                     t-att-alt="record.manager_id.value"
                                                     class="oe_kanban_avatar"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Liste pour les signalements d'alerte -->
        <record id="view_whistleblowing_alert_list" model="ir.ui.view">
            <field name="name">whistleblowing.alert.list</field>
            <field name="model">whistleblowing.alert</field>
            <field name="arch" type="xml">
                <list decoration-danger="priority == 'urgent'" decoration-warning="priority == 'high'">
                    <field name="name"/>
                    <field name="alert_date"/>
                    <field name="category"/>
                    <field name="priority"/>
                    <field name="is_anonymous"/>
                    <field name="stage_id"/>
                    <field name="manager_id"/>
                    <field name="state" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Vue Formulaire pour les signalements d'alerte -->
        <record id="view_whistleblowing_alert_form" model="ir.ui.view">
            <field name="name">whistleblowing.alert.form</field>
            <field name="model">whistleblowing.alert</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                        <button name="action_start_assessment" string="Commencer l'Évaluation" type="object" 
                                class="btn-primary" modifiers='{"invisible": [["state", "!=", "new"]]}'/>
                        <button name="action_start_investigation" string="Commencer l'Enquête" type="object" 
                                class="btn-primary" modifiers='{"invisible": [["state", "!=", "preliminary_assessment"]]}'/>
                        <button name="action_resolve" string="Marquer comme Résolu" type="object" 
                                class="btn-success" modifiers='{"invisible": [["state", "!=", "investigation"]]}'/>
                        <button name="action_transmit" string="Transmettre" type="object" 
                                class="btn-warning" modifiers='{"invisible": [["state", "!=", "investigation"]]}'/>
                        <button name="action_close" string="Clôturer" type="object" 
                                class="btn-secondary" modifiers='{"invisible": [["state", "in", ["closed"]]]}'/>
                        <field name="state" widget="statusbar" statusbar_visible="new,preliminary_assessment,investigation,resolved,transmitted,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_portal_anonymous" icon="fa-eye-slash">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Suivi</span>
                                    <span class="o_stat_text">Anonyme</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="signalement" string="Informations du Signalement">
                                <field name="alert_date"/>
                                <field name="category"/>
                                <field name="priority"/>
                                <field name="is_anonymous"/>
                            </group>
                            <group name="traitement" string="Traitement">
                                <field name="manager_id"/>
                                <field name="investigation_start_date" modifiers='{"invisible": [["investigation_start_date", "=", false]]}'/>
                                <field name="investigation_end_date" modifiers='{"invisible": [["investigation_end_date", "=", false]]}'/>
                                <field name="resolution_date" modifiers='{"invisible": [["resolution_date", "=", false]]}'/>
                            </group>
                        </group>
                        
                        <!-- CHAMPS ULTRA-SENSIBLES - Visibles uniquement aux référents -->
                        <group string="Informations du Signalant (CONFIDENTIEL)" 
                               modifiers='{"invisible": [["is_anonymous", "=", true]]}'
                               groups="sama_conai.group_whistleblowing_manager">
                            <group>
                                <field name="reporter_name"/>
                                <field name="reporter_email"/>
                                <field name="reporter_phone"/>
                            </group>
                            <group>
                                <field name="access_token" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Description du Signalement" name="description">
                                <field name="description" widget="html"/>
                            </page>
                            
                            <page string="Pièces Justificatives" name="evidence">
                                <field name="evidence_attachment_ids" widget="many2many_binary"/>
                            </page>
                            
                            <page string="Investigation" name="investigation" 
                                  groups="sama_conai.group_whistleblowing_manager">
                                <group string="Notes d'Investigation">
                                    <field name="investigation_notes" widget="html" nolabel="1"/>
                                </group>
                            </page>
                            
                            <page string="Résolution" name="resolution" 
                                  modifiers='{"invisible": [["state", "not in", ["resolved", "transmitted", "closed"]]]}'>
                                <group string="Résolution">
                                    <field name="resolution" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Recherche pour les signalements d'alerte -->
        <record id="view_whistleblowing_alert_search" model="ir.ui.view">
            <field name="name">whistleblowing.alert.search</field>
            <field name="model">whistleblowing.alert</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="category"/>
                    <field name="manager_id"/>
                    
                    <filter string="Mes Signalements" name="my_alerts" domain="[('manager_id', '=', uid)]"/>
                    <filter string="Anonymes" name="anonymous" domain="[('is_anonymous', '=', True)]"/>
                    <filter string="Urgents" name="urgent" domain="[('priority', '=', 'urgent')]"/>
                    <filter string="Priorité Élevée" name="high_priority" domain="[('priority', '=', 'high')]"/>
                    
                    <separator/>
                    <filter string="Nouveaux" name="new" domain="[('state', '=', 'new')]"/>
                    <filter string="En Évaluation" name="assessment" domain="[('state', '=', 'preliminary_assessment')]"/>
                    <filter string="En Enquête" name="investigation" domain="[('state', '=', 'investigation')]"/>
                    <filter string="Résolus" name="resolved" domain="[('state', '=', 'resolved')]"/>
                    <filter string="Transmis" name="transmitted" domain="[('state', '=', 'transmitted')]"/>
                    
                    <separator/>
                    <filter string="Ce Mois" name="this_month" domain="[('alert_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                    <filter string="Cette Année" name="this_year" domain="[('alert_date', '&gt;=', (context_today().replace(month=1, day=1)).strftime('%Y-%m-%d'))]"/>
                    
                    <group expand="0" string="Grouper par">
                        <filter string="Étape" name="group_stage" context="{'group_by': 'stage_id'}"/>
                        <filter string="Catégorie" name="group_category" context="{'group_by': 'category'}"/>
                        <filter string="Priorité" name="group_priority" context="{'group_by': 'priority'}"/>
                        <filter string="Référent" name="group_manager" context="{'group_by': 'manager_id'}"/>
                        <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Date de Signalement" name="group_alert_date" context="{'group_by': 'alert_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vue Graphique pour les signalements d'alerte -->
        <record id="view_whistleblowing_alert_graph" model="ir.ui.view">
            <field name="name">whistleblowing.alert.graph</field>
            <field name="model">whistleblowing.alert</field>
            <field name="arch" type="xml">
                <graph string="Analyse des Signalements d'Alerte">
                    <field name="alert_date" type="row" interval="month"/>
                    <field name="category" type="col"/>
                </graph>
            </field>
        </record>

        <!-- Vue Pivot pour les signalements d'alerte -->
        <record id="view_whistleblowing_alert_pivot" model="ir.ui.view">
            <field name="name">whistleblowing.alert.pivot</field>
            <field name="model">whistleblowing.alert</field>
            <field name="arch" type="xml">
                <pivot string="Analyse des Signalements d'Alerte">
                    <field name="alert_date" type="row" interval="month"/>
                    <field name="category" type="col"/>
                    <field name="priority" type="col"/>
                </pivot>
            </field>
        </record>

        <!-- Action pour les signalements d'alerte -->
        <record id="action_whistleblowing_alert" model="ir.actions.act_window">
            <field name="name">Signalements d'Alerte</field>
            <field name="res_model">whistleblowing.alert</field>
            <field name="view_mode">kanban,list,form,graph,pivot</field>
            <field name="context">{'search_default_my_alerts': 1}</field>
            <field name="groups_id" eval="[(4, ref('sama_conai.group_whistleblowing_manager'))]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucun signalement d'alerte
                </p>
                <p>
                    Les signalements d'alerte sont créés via le portail anonyme.
                    Seuls les référents d'alerte peuvent accéder à cette section.
                </p>
            </field>
        </record>

    </data>
</odoo>